<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/urbanDarkGreen"
    android:padding="5dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:text="Dialog title"
        android:textSize="20sp"
        android:textStyle="normal"
        android:letterSpacing="0.09"
        android:textColor="@color/white"
        />

    <View
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height= "1dp"
        android:background="@color/urbanLightGreen" />

    <TextView
        android:id="@+id/dialog_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:text="Dialog text 1"
        android:textSize="15sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/dialog_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="5dp"

        android:text="Dialog text 2"
        android:textSize="15sp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/modal_btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/urbanViolet"
            android:text="DISMISS"
            android:textColor="@android:color/white" />

        <Button
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/modal_btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/urbanLightGreen"
            android:text="ACCEPT"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>