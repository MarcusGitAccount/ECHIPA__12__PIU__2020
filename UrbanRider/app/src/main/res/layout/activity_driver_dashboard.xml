<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/urbanDarkBlue"
    android:orientation="vertical"
    tools:context=".DriverDashboard">

    <include layout="@layout/main_toolbar"/>

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:openDrawer="start">

        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/urbanDarkGreen"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_profit_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Profit"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/dashboard_profit"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        />

                    <TextView
                        android:id="@+id/dashboard_profit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.5dp"
                        android:padding="0dp"
                        android:text="1700RON"
                        android:background="@drawable/textview_rounded_corners"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@id/dashboard_profit_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/urbanDarkGreen"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_ride_count_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Number of rides"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/dashboard_ride_count"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        />

                    <TextView
                        android:id="@+id/dashboard_ride_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.5dp"
                        android:padding="0dp"
                        android:text="23"
                        android:background="@drawable/textview_rounded_corners"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@id/dashboard_ride_count_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/urbanDarkGreen"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_review_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Review"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/dashboard_review"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        />

                    <TextView
                        android:id="@+id/dashboard_review"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.5dp"
                        android:padding="0dp"
                        android:text="4.67"
                        android:background="@drawable/textview_rounded_corners"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@id/dashboard_review_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/urbanDarkGreen"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_activate_btn_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Become active"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/dashboard_activate_btn"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        />

                    <TextView
                        android:id="@+id/dashboard_activate_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.5dp"
                        android:padding="0dp"
                        android:text="ACTIVATE"
                        android:clickable="true"
                        android:textColor="@color/urbanLightGreen"
                        android:gravity="center"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@id/dashboard_activate_btn_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/urbanDarkGreen"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_switch_btn_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Switch to normal mode"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/dashboard_switch_btn"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        />

                    <TextView
                        android:id="@+id/dashboard_switch_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.5dp"
                        android:padding="0dp"
                        android:text="SWITCH"
                        android:clickable="true"
                        android:textColor="@color/urbanLightGreen"
                        android:gravity="center"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@id/dashboard_switch_btn_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/urbanDarkGreen"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_start_btn_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Start driving"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/dashboard_start_btn"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        />

                    <TextView
                        android:id="@+id/dashboard_start_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.5dp"
                        android:padding="0dp"
                        android:text="START"
                        android:clickable="true"
                        android:textColor="@color/urbanLightGreen"
                        android:gravity="center"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toRightOf="@id/dashboard_start_btn_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_nav_drawer_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/urbanDarkGreen"
                    android:orientation="vertical"
                    app:layout_constraintHeight_percent="0.25"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/main_nav_drawer_profile_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="25dp"
                        android:src="@mipmap/ic_profile_pic_round"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/main_nav_drawer_profile_pic"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/main_nav_drawer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ion_ionescu"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <Button
                            android:id="@+id/driver_mode_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:background="@color/urbanViolet"
                            android:text="Driver mode"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/main_nav_drawer_name"
                            app:layout_constraintEnd_toEndOf="@id/main_nav_drawer_name"
                            app:layout_constraintTop_toBottomOf="@id/main_nav_drawer_name" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/main_nav_drawer_body"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/urbanDarkBlue"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.75"
                    app:layout_constraintTop_toBottomOf="@id/main_nav_drawer_header">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/drawer_options_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>



</androidx.constraintlayout.widget.ConstraintLayout>