<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vehicles.activities.BikeManageActivity">
    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/main_toolbar" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        tools:openDrawer="start">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
            android:background="@color/urbanDarkBlue">

            <TextView
                android:id="@+id/bike_layout_title"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:text="Add Bike:"
                android:textSize="23sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <RelativeLayout
                android:id="@+id/new_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/urbanDarkGreen"
                app:layout_constraintTop_toBottomOf="@id/bike_layout_title">
                <ImageView
                    android:id="@+id/new_image"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_margin="15dp"
                    android:src="@color/white"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    android:gravity="end"
                    android:backgroundTint="@color/urbanLightGreen"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="25dp"
                    android:onClick="uploadPhoto"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/brand_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Bike's Brand:"
                android:textSize="19sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/new_image_layout"/>
            <EditText
                android:id="@+id/bike_brand"
                android:layout_width="260dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/brand_text_view"
                app:layout_constraintTop_toBottomOf="@id/new_image_layout"
                android:layout_marginStart="15dp"
                android:inputType="text"
                android:autofillHints="Enter bike brand"/>
            <TextView
                android:id="@+id/type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="19sp"
                android:text="Bike's type:"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/brand_text_view"/>
            <Spinner
                android:id="@+id/bike_type_spinner"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/type_text_view"
                app:layout_constraintTop_toBottomOf="@id/brand_text_view"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp" />
            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Price:"
                android:textSize="19sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_text_view"/>
            <EditText
                android:id="@+id/bike_price"
                android:layout_width="120dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/price_text_view"
                app:layout_constraintTop_toBottomOf="@id/type_text_view"
                android:layout_marginStart="15dp"
                android:inputType="text"
                android:autofillHints="Enter equipment price"/>

            <TextView
                android:id="@+id/currency_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="19sp"
                android:text="Currency:"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bike_price"
                app:layout_constraintTop_toBottomOf="@id/type_text_view"/>
            <Spinner
                android:id="@+id/bike_currency_spinner"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/currency_text_view"
                app:layout_constraintTop_toBottomOf="@id/type_text_view"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"/>
            <Button
                android:id="@+id/add_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/urbanLightGreen"
                android:text="Add"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/update_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/urbanLightGreen"
                android:text="Update"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:id="@+id/delete_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/urbanLightGreen"
                android:text="Delete"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>